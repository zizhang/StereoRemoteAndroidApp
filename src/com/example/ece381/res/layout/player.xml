<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:src="@drawable/connect_0" />

        <SeekBar
            android:id="@+id/player_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/connect"
            android:layout_alignLeft="@+id/prev1"
            android:layout_marginBottom="26dp"
            android:layout_toLeftOf="@+id/shuffle"
            android:onClick="onProgressChanged"
            android:progressDrawable="@drawable/progress" />

        <TextView
            android:id="@+id/currentlyPlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scrollHorizontally="true"
            android:text="@string/currentlyplayingtext"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <ImageButton
            android:id="@+id/next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/player_volume"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/play2"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/next_0" />

        <ImageButton
            android:id="@+id/shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/next1"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/shuffle_0" />

        <ImageButton
            android:id="@+id/play2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/next1"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@drawable/play_0" />

        <ImageButton
            android:id="@+id/repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/play2"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/repeat_0" />

        <ImageButton
            android:id="@+id/prev1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/play2"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/play2"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/prev_0" />

        <ImageButton
            android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/repeat"
            android:background="@null"
            android:src="@drawable/mute_0" />

        <ImageButton
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/shuffle"
            android:layout_alignTop="@+id/settings"
            android:background="@null"
            android:src="@drawable/list_0" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/list"
            android:background="@null"
            android:src="@drawable/eq_0" />

        <ImageButton
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/connect"
            android:background="@null"
            android:src="@drawable/voice_0" />

        <ImageButton
            android:id="@+id/twit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/voice"
            android:background="@null"
            android:src="@drawable/twit_0" />

        <ImageButton
            android:id="@+id/drum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/settings"
            android:background="@null"
            android:src="@drawable/drum_0" />

    </RelativeLayout>

</LinearLayout>